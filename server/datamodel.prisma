type User {
    id: ID! @id
    writtenPosts: [Post!]! @relation(name: "WrittenPosts")
    likedPosts: [Post!]! @relation(name: "LikedPosts")
    name: String @unique
}

type Post {
    id: ID! @id
    author: User @relation(name: "WrittenPosts")
    likedBy: [User!]! @relation(name: "LikedPosts")
    content: String
    score: Int @default(value: 0)
    published: Boolean! @default(value: false)
    expired: Boolean! @default(value: false)
    expirationDate: Float
    createdDate: Float
}
